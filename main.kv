<MenuScreen>:
    GridLayout:
        cons: 1
        rows: 2

        Label:
            text: 'WELCOME TO COIN FLIPPER!'
            font_size: 40
            color: 1,0,0,1

        GridLayout:
            cons: 2
            rows: 1
            Button:
                text: ''
                on_press: root.manager.current = 'game'
                background_normal: 'start.png'
                background_color: 0,1,0,1
                color: 1,0,0,1

            Button:
                text: 'EXIT'
                font_size: 80
                on_press: root.close()

<GameScreen>
    result:result
    score:score
    size: 1920,1080

    canvas:
        Color:
            rgba: 0,0.50,1,1
        Rectangle:
            pos: self.pos
            size: self.size
    FloatLayout:
        Button:
            text:''
            font_size: 10
            size_hint: .15, .2
            pos_hint: {'x':.4, 'y':.15}
            on_release: root.flip()
            on_press: root.tossing()
            background_normal: 'repeat.png'
            background_color: 0,.5,1,1

        Label:
            id: score
            text: 'HEADS:\n TAILS:'
            font_size: 25
            pos_hint: {'x':.02, 'y':.88}
            size_hint: .1,.1

        Label:
            id: result
            text: ''
            font_size: 100
            pos_hint: {'x':.35, 'y':.50}
            size_hint: .3,.3
        Button:
            text: 'MAIN\nMENU'
            font_size: 40
            on_press: root.manager.current = 'menu'
            size_hint: .2, .2
            pos_hint: {'x':.7, 'y':.15}
            background_color: 0,0,0,0